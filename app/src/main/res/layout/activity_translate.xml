<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".TranslateActivity">


    <TextView
        android:id="@+id/inputToTranslate"
        android:background="@drawable/edit_text_background"
        android:scrollbars = "vertical"
        android:maxLines="5"
        android:layout_width="298sp"
        android:layout_height="146sp"
        android:layout_gravity="center"
        android:layout_marginTop="35sp"
        android:layout_marginBottom="16sp"
        android:ems="10"
        android:textSize="20sp"
        android:hint=""
        android:textColor="@color/login_form_details"
        android:textColorHint="@color/login_form_details"
        android:inputType="text"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/langDetected"
        android:layout_width="263sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="40sp"
        android:ems="10"
        android:hint=""
        android:inputType="text"
        android:textColor="@color/login_form_details"
        android:textColorHint="@color/login_form_details"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="TextViewEdits" />


    <!-- Delete button background on spinner for other UI view-->
    <Spinner
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:id="@+id/language_selector"
        android:layout_width="192sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_background"
        android:theme="@style/spinnerTheme" />



    <Button
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32sp"
        android:layout_marginTop="35sp"
        android:background="@drawable/button_background"
        android:textColor="@color/login_form_details"
        android:text="Translate" />

    <TextView
        android:id="@+id/translatedTv"
        android:layout_width="298sp"
        android:layout_height="146sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/edit_text_background"
        android:scrollbars="vertical"

        android:textColor="@color/login_form_details"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/actionContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22sp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center">


        <Button
            android:id="@+id/postQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="77dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/button_background"
            android:text="POST"
            android:textColor="@color/login_form_details" />

    </RelativeLayout>

</LinearLayout>


